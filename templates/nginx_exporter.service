[Unit]
Description=Prometheus Nginx Exporter
After=network.target

[Service]
Type=simple
User={{ nginx_user }}
Group={{ nginx_group }}
ExecStart=/usr/local/bin/nginx-prometheus-exporter \
    -nginx.scrape-uri {{ nginx_scrape_uri }}
SyslogIdentifier=nginx_exporter
Restart=always

[Install]
WantedBy=multi-user.target